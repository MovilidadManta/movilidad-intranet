services:
  app:
    build:
      context: .
      dockerfile: Dockerfile
    image: intranet-app
    container_name: intranet-app
    restart: unless-stopped
    volumes:
      - .:/var/www
    depends_on:
      - redis

  web:
    image: nginx:latest
    container_name: intranet-web
    restart: unless-stopped
    ports:
      - "8080:8080"
    volumes:
      - ./nginx.conf:/etc/nginx/conf.d/default.conf
      - .:/var/www
    depends_on:
      - app

  redis:
    image: redis:latest
    container_name: laravel-redis-intranet
    ports:
      - "6380:6380"
    volumes:
      - ./redis.conf:/usr/local/etc/redis/redis.conf  # Monta tu configuración personalizada
    command: redis-server /usr/local/etc/redis/redis.conf  # Usar configuración personalizada
    restart: always

  queue:
    image: intranet-app
    container_name: intranet-queue
    command: php artisan queue:work redis --timeout=60 --tries=3
    depends_on:
      - app
      - redis
    volumes:
      - .:/var/www
    restart: always

  node:
    image: node:14-alpine
    container_name: intranet-node-app
    working_dir: /var/www
    volumes:
      - .:/var/www
    command: >
      sh -c "npm install -g pm2 && npm install && pm2 start server.js --no-daemon"
    ports:
      - "3000:3000"
    restart: unless-stopped